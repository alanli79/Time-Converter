<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp" >
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currentTimeBack"
            android:layout_width="376dp"
            android:layout_height="125dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Title" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="225dp"
            android:text="@string/current_time_zone"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/currentTimeBack"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/currentTimeBack"
            app:layout_constraintTop_toTopOf="@+id/currentTimeBack" />

        <TextView
            android:id="@+id/originalTimeBack"
            android:layout_width="376dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentTimeBack" />

        <TextView
            android:id="@+id/homeTimeBack"
            android:layout_width="376dp"
            android:layout_height="125dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/originalTimeBack" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="250dp"
            android:text="@string/original_time"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/originalTimeBack"
            app:layout_constraintStart_toStartOf="@+id/originalTimeBack"
            app:layout_constraintTop_toTopOf="@+id/originalTimeBack" />

        <TextView
            android:id="@+id/convertedTimeBack"
            android:layout_width="376dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeTimeBack" />

        <TextView
            android:id="@+id/HomeTimeZoneWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="237dp"
            android:text="@string/Home_time_zone"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/homeTimeBack"
            app:layout_constraintHorizontal_bias="0.68"
            app:layout_constraintStart_toStartOf="@+id/homeTimeBack"
            app:layout_constraintTop_toTopOf="@+id/homeTimeBack" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="225dp"
            android:text="@string/converted_time"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/convertedTimeBack"
            app:layout_constraintStart_toStartOf="@+id/convertedTimeBack"
            app:layout_constraintTop_toTopOf="@+id/convertedTimeBack" />

        <ImageButton
            android:id="@+id/convertButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#000000"
            android:src="@drawable/mh3ntdmbkve3ldv93gc8omou2b__1_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/convertedTimeBack"
            tools:src="@drawable/mh3ntdmbkve3ldv93gc8omou2b__1_"
            android:contentDescription="@string/converter"/>

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#000000"
            android:contentDescription="@string/Settings"
            android:src="@drawable/settings_23_48"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/spinner_location"
            android:layout_width="334dp"
            android:layout_height="42dp"
            android:layout_marginTop="44dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.583"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/currentTimeBack" />

        <TextView
            android:id="@+id/homeTimeZone"
            android:layout_width="315dp"
            android:layout_height="41dp"
            android:layout_marginBottom="40dp"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/homeTimeBack"
            app:layout_constraintEnd_toEndOf="@+id/homeTimeBack"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintStart_toStartOf="@+id/homeTimeBack" />

        <TextView
            android:id="@+id/convertedTime"
            android:layout_width="195dp"
            android:layout_height="43dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/convertedTimeBack"
            app:layout_constraintEnd_toEndOf="@+id/convertedTimeBack"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="@+id/convertedTimeBack" />

        <Button
            android:id="@+id/currentTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FFFFFF"
            android:text="Time"
            android:textColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/originalTimeBack"
            app:layout_constraintEnd_toEndOf="@+id/originalTimeBack"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/originalTimeBack" />

        <TextView
            android:id="@+id/currentDiff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/currentTimeBack"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintStart_toStartOf="@+id/currentTimeBack"
            app:layout_constraintTop_toBottomOf="@+id/spinner_location" />

        <TextView
            android:id="@+id/homeDiff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/homeTimeBack"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@+id/homeTimeBack"
            app:layout_constraintTop_toBottomOf="@+id/homeTimeZone" />

        <ImageView
            android:id="@+id/sleepAlert"
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:src="@android:drawable/ic_dialog_alert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>